<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent"    
    android:layout_height="fill_parent" 
    android:background="@color/tools_box_bg">    

    <LinearLayout
        android:id="@+id/start_page_pic"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <View
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/westlake_startpage" />        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/whats_new_title1_tv"
            style="@style/A2_Font"
            android:gravity="center"
            android:paddingLeft="0.0dip"
            android:text="@string/wemarried_startpage_date" />

       <TextView
            android:id="@+id/whats_new_title2_tv"
            style="@style/A2_Font"
            android:layout_marginTop="0.0dip"
            android:gravity="center"
            android:paddingLeft="0.0dip"
            android:text="@string/wemarried_startpage_text" />

    </LinearLayout>

</FrameLayout>